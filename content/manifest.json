{
  "manifest_version": 3,
  "name": "ChatGPT Stream Rescue",
  "version": "1.0.0",
  "description": "Restores the last ChatGPT assistant reply after errors or moderation.",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  }
}
